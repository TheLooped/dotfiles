# Set the preferred text editor
export EDITOR=/usr/bin/nvim

# Onyx Variables
export ONYX_PATH="/home/loop/.onyx"
export PATH="$ONYX_PATH/bin:$PATH"

# Set the language and locale settings
export LANG=en_US.UTF-8
export LC_ALL=en_US.UTF-8

# Set the home directory for applications
export XDG_CONFIG_HOME=$HOME/.config
export XDG_CACHE_HOME=$HOME/.cache

# Set the directory for history files
export HISTFILE=$HOME/.zsh_history

# Set the prompt theme for Oh My Zsh
export ZSH_THEME="robbyrussell"

# Set the directory for plugins
export ZSH_CUSTOM=$HOME/.oh-my-zsh/custom
